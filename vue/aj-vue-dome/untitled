    			click  alert3
    			<a v-on:click.stop="alert2('alert4')">click  alert4</a>
    			<a v-on:click="alert2('alert5')">click  alert5</a>
    		</li>
    		<li>
    			<a href="javascript:alert('alert6 默认')" v-on:click="alert2('alert6')">click  alert6</a>
    			<a href="javascript:alert('alert7 默认')" v-on:click.prevent="alert2('alert7')">click  alert7</a>
    		</li>
    		<li>
    			<input v-on:keyup.enter="alert2('回车')">
    			<input v-on:keyup.13="alert2('回车 13')">
    		</li>
